<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4C95BD" />
            <gradient android:angle="-90" android:startColor="#0F628F" android:endColor="#306F91"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#306F91" />
            <solid android:color="#2E6684"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2E6684" />
            <gradient android:angle="-90" android:startColor="#7BBFE5" android:endColor="#4A7B96" />
        </shape>
    </item>
</selector>